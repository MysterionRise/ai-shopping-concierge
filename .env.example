# OpenRouter (leave empty or use placeholder for demo mode — no API key needed)
OPENROUTER_API_KEY=sk-or-v1-your-key-here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_MODEL=anthropic/claude-sonnet-4-20250514

# Database (asyncpg for app, sync for Alembic)
DATABASE_URL=postgresql+asyncpg://concierge:concierge@localhost:5432/concierge
DATABASE_URL_SYNC=postgresql://concierge:concierge@localhost:5432/concierge

# LangGraph checkpoint store (psycopg format — same DB, different driver)
CHECKPOINT_DB_URL=postgresql://concierge:concierge@localhost:5432/concierge

# Redis
REDIS_URL=redis://localhost:6379/0

# ChromaDB
CHROMADB_HOST=localhost
CHROMADB_PORT=8000

# App
APP_HOST=0.0.0.0
APP_PORT=8080
LOG_LEVEL=INFO
CORS_ORIGINS=["http://localhost:3000"]

# LangSmith (optional)
LANGSMITH_API_KEY=
LANGSMITH_PROJECT=beauty-concierge

# Persona monitoring (optional — requires ~16GB RAM or 6GB VRAM)
PERSONA_ENABLED=false
